#!/bin/sh

uci -q batch <<-EOF >/dev/null
    delete ucitrack.@cloud-clipboard[-1]
    add ucitrack cloud-clipboard
    set ucitrack.@cloud-clipboard[-1].init=cloud-clipboard
    commit ucitrack
EOF

# 为cloud-clipboard创建默认配置（如果不存在）
if [ ! -f /etc/config/cloud-clipboard ]; then
    cat > /etc/config/cloud-clipboard <<-EOF
config cloud-clipboard 'main'
    option enabled '1'
    option host '0.0.0.0'
    option port '9501'
    option auth ''
EOF
fi

rm -f /tmp/luci-indexcache
exit 0